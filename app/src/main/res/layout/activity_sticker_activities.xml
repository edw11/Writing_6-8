<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".activities.stickerActivities">

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_back"
        app:tint="@color/colorIcons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Sticker"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/sticker1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/sticker1"></ImageView>

        <ImageView
            android:id="@+id/sticker2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/sticker2"></ImageView>

        <ImageView
            android:id="@+id/sticker3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sticker3"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/sticker4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/sticker4"></ImageView>

        <ImageView
            android:id="@+id/sticker5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="63dp"
            android:src="@drawable/sticker5"></ImageView>

        <ImageView
            android:id="@+id/sticker6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sticker6"></ImageView>
    </LinearLayout>

</LinearLayout>